<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="12dp"
    android:background="@color/cardview_dark_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_item_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/image_item_view"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/image_item_view"
            card_view:layout_constraintTop_toTopOf="@+id/image_item_view"
            tools:text="@string/title_name" />


        <ImageView
            android:id="@+id/image_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_location_on_24"
            card_view:layout_constraintBaseline_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/image_item_view"
            card_view:layout_constraintTop_toBottomOf="@+id/text_item_title"
            tools:layout_editor_absoluteY="76dp" />

        <TextView
            android:id="@+id/text_item_location"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/image_item_location"
            card_view:layout_constraintStart_toEndOf="@+id/image_item_location"
            card_view:layout_constraintTop_toTopOf="@+id/image_item_location"
            tools:text="@string/location" />

        <ImageView
            android:id="@+id/image_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_star_on_24"
            card_view:layout_constraintBaseline_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/image_item_view"
            card_view:layout_constraintBottom_toBottomOf="@id/image_item_view"
            tools:layout_editor_absoluteY="76dp" />

        <TextView
            android:id="@+id/text_item_rating"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/image_item_rating"
            card_view:layout_constraintStart_toEndOf="@+id/image_item_rating"
            card_view:layout_constraintTop_toTopOf="@+id/image_item_rating"
            tools:text="@string/rating" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>